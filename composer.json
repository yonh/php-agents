{
    "name": "yonh/php-agents",
    "description": "A modern PHP Agent library for LLM integration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "PHP Agent Team",
            "email": "team@php-agent.dev"
        }
    ],
    "require": {
        "php": "^8.5",
        "ext-json": "*",
        "ext-curl": "*",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PhpAgent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpAgent\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "cs-fix": "php-cs-fixer fix src",
        "cs-check": "php-cs-fixer fix src --dry-run --diff"
    }
}
